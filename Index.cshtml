@model IEnumerable<ModelClasses.Product>

<div class="borderWithColorProd">
	<div class="row">
		<div class="col-7">
			<h2 class="text-primary">ProductList</h2>
			<hr/>

		</div>
		<div class="col-5">
			<a asp-action="Create" asp-controller="Product"class="btn btn-primary form-control">Create Product</a>
		</div>
	</div>
	<div class="PaddingAllWhite">

		@if (Model.Count() > 0)
		{
			<div class="table-responsive">
				<table class="table table-bordered">
					<tr class="bg-secondary text-white">
						<th>Name</th>
						<th>Price ₹ </th>
						<th class=" ">
							<div class="border-0">
								Description
							</div>
						</th>
						<th class=" ">
							<div class=" border-0">
								Category
							</div>
						</th>
						<th>Image</th>
						<th></th>
					</tr>
					@foreach (var item in Model)
					{ 
						<tr>

							<td>@item.Name</td>
							<td>@item.Price ₹ </td>
							<td>
								<div class="border-0">
									@Html.Raw(item.Description)
								</div>
							</td>
							<td>
								<div class="border-0">
									@item.Category.Name.
								</div>
							</td>
							@if (item.HomeImgUrl != "")
							{
								<td width="150" height="100"><img src="~/Images/@item.HomeImgUrl" class="rounded img-fluid" width="150" height="100" /></td>
							}
							else
							{
								<td width="150" height="100"><img src="~/Images/noimage.jpg" class="rounded img-fluid" width="150" height="100" /></td>
							}
							<td width="150" height="100">
								<a asp-action="Edit"asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary mb-1 form-control">Edit</a>
								<a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary form-control">Delete</a>

								@* <a href="@Url.Action("Delete", "Product", new { id = item.Id })"
								   class="btn btn-danger"
								   style="background-color: #007bff; color: #fff; border: none; padding: 10px 15px; font-size: 0.9rem; text-decoration: none; border-radius: 4px;">
									Delete
								</a>
						 *@
							</td>
						</tr>
					}

				</table>
			</div>
		}
		else
		{
			<h1 class="text-info">No Product Available</h1>
		}
	</div>
	</div>
 
@section Scripts{
	<script src="~/js/product.js"></script>
} 